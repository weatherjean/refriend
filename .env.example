# Riff Environment Configuration
# Copy to .env and fill in values
# NEVER commit .env to version control

# =============================================================================
# REQUIRED
# =============================================================================

# Your domain (without https://)
DOMAIN=yourdomain.com

# PostgreSQL (from Scaleway Managed Database)
DATABASE_URL=postgres://user:password@host:port/riff?sslmode=require

# Object Storage (Scaleway S3)
S3_BUCKET=riff-uploads
S3_REGION=fr-par
S3_ENDPOINT=https://s3.fr-par.scw.cloud
S3_PUBLIC_URL=https://riff-uploads.s3.fr-par.scw.cloud
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Transactional Email (Scaleway TEM)
SCW_SECRET_KEY=your-scw-secret-key
SCW_PROJECT_ID=your-project-id
SCW_REGION=fr-par
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# OPTIONAL (defaults shown)
# =============================================================================

# Database pool size (see DEPLOY.md for sizing guide)
# DB_POOL_SIZE=40

# Environment
# ENV=production

# Trust reverse proxy headers (set true when behind Caddy)
# TRUST_PROXY=true

# Federation queue workers
# QUEUE_WORKERS=4
